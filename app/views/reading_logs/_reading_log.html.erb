<div class="space-y-5 sm:space-y-0 py-4 border-b last:border-0 flex justify-between items-center flex-col sm:flex-row">
  <div class="sm:pr-3 sm:max-w-[410px] text-center sm:text-left">
    <p class="truncate text-wrap sm:text-nowrap font-semibold text-3xl sm:text-xl leading-snug"><%= reading_log.name %></p>
    <p class="text-sm">Started on <%= format_on_date(reading_log.created_at) %></p>
    <% if @has_completed_status %>
      <div class="text-sm text-emerald-700 font-semibold">Completed on <%= format_on_date(reading_log.created_at) %></div>
    <% end %>
    <% if reading_log.is_group_reading_log? %>
      <%= render(BadgeComponent.new(title: "Group Reading")) %>
    <% end %>
  </div>
  <div class="flex sm:space-x-2 items-center flex-col sm:flex-row space-y-3 sm:space-y-0">
    <div class="flex ietms-center justify-center opacity-60 sm:mr-2 text-sm space-x-3">
      <% if @has_completed_status %>
        <span><%= pluralize(reading_log.completed_books_count, "book") %></span>
      <% else %>
        <div><%= reading_log.completed_books_count %>/<%= reading_log.books_count %> <%= "book".pluralize(reading_log.books_count) %></div>
        <div class=""><%= reading_log.completed_book_percentage %>%</div>
      <% end %>
    </div>
    <%= link_to reading_log_path(reading_log), data: { turbo_frame: "_top" }, class: "btn btn--primary btn--slim w-fit" do %>
      View
    <% end %>
  </div>
</div>