<div class="">
  <div class="mb-6 flex items-start space-y-3 sm:space-y-0 sm:justify-between sm:items-center flex-col sm:flex-row">
    <%= render(HeadingComponent.new(title: "Reading Logs")) %>
    <%= link_to new_reading_log_path, class: "btn btn--primary w-auto btn--slim flex items-center space-x-1 pl-1.5" do %>
      <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-plus"><path d="M5 12h14"/><path d="M12 5v14"/></svg>
      <span>New Reading Log</span>
    <% end %>
  </div>
  <div class="mb-8">
    <p class="">A list of all your reading logs including their name, books, and started or completed date.</p>
  </div>
</div>
<div class="space-x-2.5 mb-3 flex justify-start">
  <%= link_to root_path, class: "#{'btn btn--primary' unless @has_completed_status} rounded-full px-4 !text-sm  btn btn--slim w-auto flex items-center space-x-2 text-nowrap" do %>
    <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-align-justify"><line x1="3" x2="21" y1="6" y2="6"/><line x1="3" x2="21" y1="12" y2="12"/><line x1="3" x2="21" y1="18" y2="18"/></svg>
    <span>Reading Logs</span>
  <% end %>
  <%= link_to  root_path(status: 'completed'), class: "#{'bg-emerald-50 text-emerald-800 !border-emerald-400 hover:bg-emerald-100 focus:!border-emerald-400' if @has_completed_status} rounded-full px-4 !text-sm  btn btn--slim w-auto flex items-center space-x-2 text-nowrap" do %>
    <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-circle-check-big"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><path d="m9 11 3 3L22 4"/></svg>
    <span>Completed</span>
  <% end %>
</div>

<div class="flow-root">
  <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
      <% if @reading_logs.present? %>
        <table class="min-w-full divide-y divide-gray-300">
          <thead>
            <tr>
              <th scope="col" class="py-3.5 pl-4 pr-3 text-left font-medium sm:pl-0 max-w-[1d00px]">
                <span class="pl-3">Name</span>
              </th>
              <th scope="col" class="px-3 pr-1 py-3.5 text-left font-medium ">Books</th>
              <th scope="col" class="px-3 py-3.5 text-left font-medium">Started</th>
              <% if @has_completed_status %>
                <th scope="col" class="px-3 py-3.5 text-left font-medium">Completed</th>
              <% end %>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 bg-white" data-controller="reading-log-index">
              <% @reading_logs.each do |reading_log| %>
                <tr class="text-base hover:bg-neutral-50 group cursor-pointer duration-100" data-action="click->reading-log-index#navigate" data-url="<%= reading_log_path(reading_log) %>">
                  <td class="py-4 pl-4 sm:pl-0">
                    <div class="flex items-center text-lg">
                      <%= link_to reading_log_path(reading_log), class: "pl-3 w-full truncate xs:max-w-[430px] whitespace-nowrap" do %>
                        <%= reading_log.name %>
                      <% end %>
                    </div>
                  </td>
                  <td class="whitespace-nowrap px-3 ">
                    <div class="opacity-50"><%= reading_log.completed_books_count %> of <%= reading_log.books_count %></div>
                  </td>
                  <td class="whitespace-nowrap px-3 opacity-50">
                    <div class=""><%= reading_log.created_at.strftime("%B %-d, %Y") %></div>
                  </td>
                  <% if @has_completed_status %>
                    <td class="whitespace-nowrap px-3 opacity-50">
                      <div class=""><%= reading_log.completed_at.strftime("%B %-d, %Y") %></div>
                    </td>
                  <% end %>
                </tr>
              <% end %>
          </tbody>
        </table>
      <% else %>
        <div class="mx-4 sm:mx-0 mt-8 border border-dashed px-4 py-10 rounded-lg text-lg text-center">
          <% if @has_completed_status %>
          <p class="opacity-50">You don't have any completed reading logs.</p>
          <% else %>
          <p class="opacity-50">You don't have any reading logs in progress.</p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>