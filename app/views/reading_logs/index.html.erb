<div class="">
  <div data-controller="cache" class="mb-6 flex items-start space-y-3 sm:space-y-0 sm:justify-between sm:items-center flex-col sm:flex-row">
    <%= render(HeadingComponent.new(title: "Reading Logs")) %>
    <%= link_to new_reading_log_path, class: "btn btn--primary w-auto btn--slim" do %>
      <span>Create new</span>
    <% end %>
  </div>
  <div class="mb-8">
    <p class="text-lg opacity-70">A list of all your reading logs including their name, status, and when they started.</p>
  </div>
</div>
<div class="space-x-2 mb-3">
  <%= link_to 'In Progress', root_path, class: "#{'btn btn--primary bg-yellow-100 text-yellow-800 !border-yellow-400 hover:bg-yellow-200 focus:!border-yellow-400' unless @has_completed_params} btn btn--slim !text-sm rounded-full" %>
  <%= link_to 'Completed', root_path(status: 'completed'), class: "#{'btn btn--primary bg-emerald-100 text-emerald-800 !border-emerald-400 hover:bg-emerald-200 focus:!border-emerald-400' if @has_completed_params} btn btn--slim !text-sm rounded-full" %>
</div>

<div class="flow-root">
  <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
      <% if @reading_logs.present? %>
        <table class="min-w-full divide-y divide-gray-300">
          <thead>
            <tr>
              <th scope="col" class="py-3.5 pl-4 pr-3 text-left font-medium sm:pl-0 max-w-[1d00px]">
                <span class="pl-3">Name</span>
              </th>
              <th scope="col" class="px-3 pr-1 py-3.5 text-left font-medium hidden xs:block">Books</th>
              <% if @has_completed_params %>
                <th scope="col" class="px-3 py-3.5 text-left font-medium">Completed</th>
              <% else %>
                <th scope="col" class="px-3 pr-1 py-3.5 text-left font-medium">Percentage</th>
                <th scope="col" class="px-3 py-3.5 text-left font-medium">Started</th>
              <% end %>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 bg-white" data-controller="reading-log-index">
              <% @reading_logs.each do |reading_log| %>
                <tr class="hover:bg-neutral-50 group cursor-pointer duration-100" data-action="click->reading-log-index#navigate" data-url="<%= reading_log_path(reading_log) %>">
                  <td class="py-4 pl-4 sm:pl-0">
                    <div class="flex items-center">
                      <%= link_to reading_log_path(reading_log), class: "pl-3 w-full text-lg truncate xs:max-w-[400px] whitespace-normal xs:whitespace-nowrap" do %>
                        <%= reading_log.name %>
                      <% end %>
                    </div>
                  </td>
                  <td class="whitespace-nowrap px-3 hidden xs:table-cell">
                    <div class="text-base opacity-50"><%= reading_log.completed_books_count %> of <%= reading_log.books_count %></div>
                  </td>
                  <% if @has_completed_params %>
                    <td class="whitespace-nowrap px-3 opacity-50">
                      <div class=""><%= reading_log.completed_at.strftime("%B %-d, %Y") %></div>
                    </td>
                  <% else %>
                    <td class="whitespace-nowrap px-3">
                      <div class="text-base opacity-50 text-center xs:text-left"><%= reading_log.completed_book_percentage %>%</div>
                    </td>
                    <td class="whitespace-nowrap px-3 opacity-50">
                      <div class=""><%= reading_log.created_at.strftime("%B %-d, %Y") %></div>
                    </td>
                  <% end %>
                </tr>
              <% end %>
          </tbody>
        </table>
      <% else %>
        <div class="mt-8 border bg-[#fdfdfd] border-dashed px-4 py-8 rounded-lg text-center ">
          <% if @has_completed_params %>
          <p class="opacity-50">You don't have any completed reading logs.</p>
          <% else %>
          <p class="opacity-50">You don't have any reading logs in progress.</p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>