<div class="">
  <div data-controller="cache" class="mb-6 flex items-start space-y-3 sm:space-y-0 sm:justify-between sm:items-center flex-col sm:flex-row">
    <%= render(HeadingComponent.new(title: "Reading Logs")) %>
    <%= link_to new_reading_log_path, class: "btn btn--primary w-auto btn--slim flex items-center space-x-1 pl-1.5" do %>
      <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-plus"><path d="M5 12h14"/><path d="M12 5v14"/></svg>
      <span>Create new</span>
    <% end %>
  </div>
  <div class="mb-8">
    <p class="text-lg opacity-70">A list of all your reading logs including their name, status, and when they started.</p>
  </div>
</div>
<div class="space-x-2 mb-3 flex justify-start">
  <%= link_to root_path, class: "#{'btn btn--primary bg-yellow-100 text-yellow-800 !border-yellow-400 hover:bg-yellow-200 focus:!border-yellow-400' unless @has_completed_params} btn btn--slim !text-sm rounded-full w-auto flex items-center space-x-1.5 text-nowrap" do %>
    <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-circle-dashed"><path d="M10.1 2.182a10 10 0 0 1 3.8 0"/><path d="M13.9 21.818a10 10 0 0 1-3.8 0"/><path d="M17.609 3.721a10 10 0 0 1 2.69 2.7"/><path d="M2.182 13.9a10 10 0 0 1 0-3.8"/><path d="M20.279 17.609a10 10 0 0 1-2.7 2.69"/><path d="M21.818 10.1a10 10 0 0 1 0 3.8"/><path d="M3.721 6.391a10 10 0 0 1 2.7-2.69"/><path d="M6.391 20.279a10 10 0 0 1-2.69-2.7"/></svg>
    <span>In Progress</span>
  <% end %>
  <%= link_to  root_path(status: 'completed'), class: "#{'btn btn--primary bg-emerald-100 text-emerald-800 !border-emerald-400 hover:bg-emerald-200 focus:!border-emerald-400' if @has_completed_params} btn btn--slim !text-sm rounded-full w-auto flex items-center space-x-1.5 text-nowrap" do %>
    <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-circle-check-big"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><path d="m9 11 3 3L22 4"/></svg>
    <span>Completed</span>
  <% end %>
</div>

<div class="flow-root">
  <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
      <% if @reading_logs.present? %>
        <table class="min-w-full divide-y divide-gray-300">
          <thead>
            <tr>
              <th scope="col" class="py-3.5 pl-4 pr-3 text-left font-medium sm:pl-0 max-w-[1d00px]">
                <span class="pl-3">Name</span>
              </th>
              <th scope="col" class="px-3 pr-1 py-3.5 text-left font-medium hidden xs:block">Books</th>
              <% if @has_completed_params %>
                <th scope="col" class="px-3 py-3.5 text-left font-medium">Completed</th>
              <% else %>
                <th scope="col" class="px-3 py-3.5 text-left font-medium">Started</th>
              <% end %>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 bg-white" data-controller="reading-log-index">
              <% @reading_logs.each do |reading_log| %>
                <tr class="text-base hover:bg-neutral-50 group cursor-pointer duration-100" data-action="click->reading-log-index#navigate" data-url="<%= reading_log_path(reading_log) %>">
                  <td class="py-4 pl-4 sm:pl-0">
                    <div class="flex items-center text-lg">
                      <%= link_to reading_log_path(reading_log), class: "pl-3 w-full truncate xs:max-w-[440px] whitespace-normal xs:whitespace-nowrap" do %>
                        <%= reading_log.name %>
                      <% end %>
                    </div>
                  </td>
                  <td class="whitespace-nowrap px-3 hidden xs:table-cell">
                    <div class="opacity-50"><%= reading_log.completed_books_count %> of <%= reading_log.books_count %></div>
                  </td>
                  <% if @has_completed_params %>
                    <td class="whitespace-nowrap px-3 opacity-50">
                      <div class=""><%= reading_log.completed_at.strftime("%B %-d, %Y") %></div>
                    </td>
                  <% else %>
                    <td class="whitespace-nowrap px-3 opacity-50">
                      <div class=""><%= reading_log.created_at.strftime("%B %-d, %Y") %></div>
                    </td>
                  <% end %>
                </tr>
              <% end %>
          </tbody>
        </table>
      <% else %>
        <div class="mt-8 border bg-[#fdfdfd] border-dashed px-4 py-8 rounded-lg text-center ">
          <% if @has_completed_params %>
          <p class="opacity-50">You don't have any completed reading logs.</p>
          <% else %>
          <p class="opacity-50">You don't have any reading logs in progress.</p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>