<% render_title "Books | #{@reading_log.name}" %>
<%= render(BackButtonComponent.new(title: "Back", path: root_path)) do |c|%>
  <%= c.with_middle_content do %>
  <% end %>
  <%= c.with_right_content do %>
    <%= link_to settings_reading_log_path(@reading_log), class: "space-x-1.5 hover:underline flex items-center w-auto", data: { turbo_frame: "settings_form"} do %>
      <svg aria-label="Settings" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-settings"><path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1-1-1.74v-.5a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"/><circle cx="12" cy="12" r="3"/></svg>
      <span class="">Settings</span>
    <% end %>
  <% end %>
<% end %>
<%= turbo_frame_tag "settings_form" %>
  <div class="text-center mb-11 sm:mb-6">
    <% if @reading_log.is_group_reading_log? %>
      <div class="border p-5 rounded-lg mb-5">
        <p class="font-semibold text-xl">Reading group</p>
          <%= render "stats", reading_log: @reading_log %>
         <% if @reading_log.template_reading_log_id.present? %>
            <%= render "stats", reading_log: @reading_log.template_reading_log %>
            <% @reading_log.template_reading_log.child_reading_logs.where.not(user: current_user).each do |child_reading_log| %>
              <%= render "stats", reading_log: child_reading_log %>
            <% end %>
         <% else %>
          <% @reading_log.child_reading_logs.each do |child_reading_log| %>
              <%= render "stats", reading_log: child_reading_log %>
          <% end %>
         <% end %>
      </div>
    <% end %>
    <% if @reading_log.completed? %>
      <div class="mx-auto mb-3 w-fit mt-0.5 flex items-center space-x-1.5 text-base font-medium text-emerald-700 bg-emerald-100  py-1 px-3 rounded-lg">
        <span>Completed <%= @reading_log.completed_books_count %>/<%= @reading_log.books_count %></span>
      </div>
    <% else %>
      <div class="mx-auto mb-3 w-fit mt-0.5 flex items-center space-x-1.5 text-base font-medium text-neutral-700 bg-neutral-100  py-1 px-3 rounded-lg">
        <span><%= "Book".pluralize(@reading_log.books_count) %> <%= @reading_log.completed_books_count %>/<%= @reading_log.books_count %></span>
      </div>
    <% end %>
    <h1 class="text-3xl font-semibold"><%= @reading_log.name %></h1>
    <% unless @reading_log.completed? %>
      <%= render "upcoming_reminder" %>
    <% end %>
  </div>
<%= render(TabsComponent.new(
  items: [
    {title: "All Books", path: reading_log_path(@reading_log), is_active: @has_no_status},
    {title: "In Progress", path: reading_log_path(@reading_log, status: "pending"), is_active: @has_pending_status},
    {title: "Completed", path: reading_log_path(@reading_log, status: 'completed'), is_active: @has_completed_status}
  ],
  is_center: true
  )) %>

    <div class="mt-5 flex-1 <%= '' if @pinned_books.present? %>">
      <% if @has_no_status %>
        <div id="<%= pinned_books_turbo_frame_id %>" class="divide-y">
          <% @pinned_books.each do |book| %>
            <%= render "books/card", book: book %>
          <% end %>
        </div>
        <div id="<%= unpinned_books_empty_turbo_frame_id %>" class="divide-y">
          <% if @pinned_books.present? && @has_unpinned_books.present? %>
            <%= render "reading_logs/all_books_header" %>
          <% end %>
        </div>
      <% end %>

      <% if @books.present? || @pinned_books.present? %>
        <div id="<%= unpinned_books_turbo_frame_id %>" class="divide-y">
          <% @books.each do |book| %>
            <%= render "books/card", book: book %>
          <% end %>
        </div>
      <% else %>
        <div class="pt-16 pb-24 rounded-lg text-lg text-center">
          <p class="opacity-40 text-lg">
            <% if @has_pending_status %>
            You don't have any books in progress.
            <% elsif @has_completed_status %>
            You don't have any completed books.
            <% end %>
          </p>
        </div>
      <% end %>
  </div>
  </div>