
<div class="mb-4">
  <%= render(HeadingComponent.new(title: "New Reading Log")) %>
</div>
<%= render(CardComponent.new) do %>

<div class="">
  <%= form_with model: @reading_log do |form| %>
    <%= render(FormErrorsComponent.new(errors: @errors)) %>
    <div class="flex flex-col md:flex-row items-end md:space-x-3 mb-4">
      <%= render(FieldContainerComponent.new(custom_classes: "md:!mb-0 flex-1 w-full md:w-auto")) do %>
        <%= render(LabelComponent.new(for_attribute: "name", title: "What do you want to call this reading log?", form: form)) %>
        <%= render(InputComponent.new(type: "text", form: form, id_and_name: "name", required: true, custom_classes: "")) %>
      <% end %>
      <%= form.submit "Create", data: { turbo_submits_with: "Creating..." }, class: "btn btn--primary md:w-auto" %>
    </div>
    <div data-controller="book-selection">
      <%= render(FieldContainerComponent.new(custom_classes: "flex items-center")) do %>
        <%= form.check_box :is_entire_bible, class: "cursor-pointer w-5 h-5 rounded", data: { action: "change->book-selection#toggleCheck"} %>
        <%= render(LabelComponent.new(for_attribute: "is_entire_bible", title: "Include every book in the Bible", form: form, custom_classes: "cursor-pointer ml-3 !text-base" )) %>
      <% end %>

      <div data-book-selection-target="bookList" class="<%= 'hidden' if form.object.is_entire_bible? %> mt-8">
        <p class="mb-4 font-semibold text-lg">Select which books to include</p>
        <%= form.fields_for :selected_books do |selected_book_form| %>
          <div class="flex space-x-1 md:space-x-8">
            <div>
              <% @old_testament_books_data.map do |book_data| %>
                <%= render(FieldContainerComponent.new(custom_classes: "flex items-center mb-5")) do %>
                  <%= selected_book_form.check_box book_data["slug"], class: "cursor-pointer w-5 h-5 rounded" %>
                  <%= render(LabelComponent.new(for_attribute: "selected_books_#{book_data["slug"]}", title: book_data["name"], form: form, custom_classes: "cursor-pointer ml-3 w-full !text-lg" )) %>
                <% end %>
              <% end %>
            </div>
            <div>
              <% @new_testament_books_data.map do |book_data| %>
                <%= render(FieldContainerComponent.new(custom_classes: "flex items-center mb-5")) do %>
                  <%= selected_book_form.check_box book_data["slug"], class: "cursor-pointer w-5 h-5 rounded" %>
                  <%= render(LabelComponent.new(for_attribute: "selected_books_#{book_data["slug"]}", title: book_data["name"], form: form, custom_classes: "cursor-pointer ml-3 w-full !text-lg" )) %>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
  <% end %>
