<% if breadcrumbs.present? %>
  <ol class="flex mb-8 -mt-2">
    <% breadcrumbs.each do |crumb| %>
      <li class="text-ssm">
        <% if crumb.link? %>
          <%= link_to crumb.name, crumb.path, class: "underline breadcrumb-link #{crumb == breadcrumbs.last ? 'opacity-80 font-medium' : 'opacity-65'} " %>
        <% else %>
          <span class="opacity-80"><%= crumb.name %></span>
        <% end %>

        <% unless crumb == breadcrumbs.last %>
          <svg class="inline opacity-60 w-3.5 mb-0.5 mr-1.5" width="15" height="15" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" class="h-4 w-4"><path d="M6.1584 3.13508C6.35985 2.94621 6.67627 2.95642 6.86514 3.15788L10.6151 7.15788C10.7954 7.3502 10.7954 7.64949 10.6151 7.84182L6.86514 11.8418C6.67627 12.0433 6.35985 12.0535 6.1584 11.8646C5.95694 11.6757 5.94673 11.3593 6.1356 11.1579L9.565 7.49985L6.1356 3.84182C5.94673 3.64036 5.95694 3.32394 6.1584 3.13508Z" fill="currentColor" fill-rule="evenodd" clip-rule="evenodd"></path></svg>
        <% end %>
      </li>
    <% end %>
  </ol>
<% end %>
