<div class="max-w-md mx-auto">
  <h1 class="text-center font-medium text-2xl"><%= @book.name %></h1>
  <%= turbo_frame_tag book_checklist_turbo_frame_id(@book) do %>
    <div
      data-chapter-container-id="<%= book_checklist_turbo_frame_id(@book) %>"
      class="grid <%= turbo_frame_request? ? 'grid-cols-4 xs:grid-cols-6 sm:grid-cols-10 gap-4' : 'grid-cols-5 xs:grid-cols-6 sm:grid-cols-7 gap-3' %>  justify-items-stretch mb-2 mt-5"
    >
      <% @book.chapters_data.each do |chapter_data| %>
        <%= render "book_chapter_square", book: @book, chapter_data: chapter_data %>
      <% end %>
    </div>
  <% end %>
</div>