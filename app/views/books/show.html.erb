<div class="max-w-xs mx-auto">
  <h1 class="text-center font-medium text-2xl"><%= @book.name %></h1>
  <%= turbo_frame_tag book_checklist_turbo_frame_id(@book) do %>
    <div data-chapter-container-id="<%= book_checklist_turbo_frame_id(@book) %>" class="mb-5 mt-5 grid xs:grid-cols-5 sm:grid-cols-4 md:grid-cols-6 grid-cols-4 md:gap-4 gap-7 sm:gap-5 text-center">
      <% @book.chapters_data.each do |chapter_data| %>
        <%= render "book_chapter_square", book: @book, chapter_data: chapter_data %>
      <% end %>
    </div>
  <% end %>
</div>