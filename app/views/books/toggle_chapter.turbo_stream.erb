<%= turbo_stream.replace book_checklist_square_turbo_frame_id(@book, @chapter_number) do %>
  <%= render "books/book_chapter_square", book: @book, chapter_data: @chapter_to_update %>
<% end %>

<%= turbo_stream.replace book_progress_line_turbo_frame_id(@book) do %>
  <%= render "books/book_progress_line", book: @book %>
<% end %>

<%= turbo_stream.replace book_card_percentage_turbo_frame_id(@book) do %>
  <%= render "books/book_card_percentage", book: @book %>
<% end %>

<%= turbo_stream.replace book_card_chapters_turbo_frame_id(@book) do %>
  <%= render "books/book_card_chapters", book: @book %>
<% end %>

<%= turbo_stream.update "flash" do %>
  <%= render "shared/flash" %>
<% end %>

<% if @completed_status == "complete" %>
  <%= turbo_stream.update completed_banner_turbo_frame_id do %>
    <%= render "book_completed_banner" %>
  <% end %>
<% elsif @completed_status == "incomplete" %>
  <%= turbo_stream.update completed_banner_turbo_frame_id, nil %>
<% end %>
