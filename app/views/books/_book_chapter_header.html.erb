<% if local_assigns[:show_page] %>
  <div class="font-semibold text-3xl">
    <%= render(HeadingComponent.new(title: book.name)) %>
  </div>
  <% completed_count = book.chapters_data.count { |data| data["completed_at"].present? } %>
  <% if completed_count == book.chapters_count %>
    <div class="opacity-40 font-normal">Congrats! You read the entire book.</div>
  <% else %>
    <div class="opacity-40 font-normal">Completed <%= book.chapters_data.count { |data| data["completed_at"].present? } %> of <%= book.chapters_count %> chapters.</div>
  <% end %>
<% else %>
  <div class="font-medium flex items-center text-lg space-x-2">
    <div><%= book.name %></div><div class="opacity-40 font-normal"><%= book.chapters_data.count { |data| data["completed_at"].present? } %>/<%= book.chapters_count %></div>
  </div>
<% end %>