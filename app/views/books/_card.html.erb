<%= content_tag :div, class: "items-center justify-between block rounded-lg border shadow-sm py-3.5 px-4 mb-6 p w-full" do %>
  <div class="flex items-center justify-between mb-5 sm:mb-3 flex-col sm:flex-row space-y-1 sm:space-y-0">
    <div class="text-2xl sm:text-xl font-medium"><%= book.name %></div>
    <%= render "books/book_card_percentage", book: book %>
  </div>

  <%= render "books/book_progress_line", book: book %>

  <div class="text-sm mt-2 flex items-center justify-between">
    <%= render "books/book_card_chapters", book: book %>
    <%= button_to book_path(book), method: :get, form: { class: "mt-2 text-right"}, class: "hover:bg-gray-50 border rounded-lg text-sm py-1 px-2 text-gray-600 cursor-pointer", data: { controller: "log-chapter", action: "log-chapter#toggle", log_chapter_opened_value: false, turbo_frame: book_checklist_turbo_frame_id(book)} do %>
      Log chapter
    <% end %>
  </div>
  <%= turbo_frame_tag book_checklist_turbo_frame_id(book) %>
<% end %>