<%= form_with url: book_toggle_chapter_path(book), method: :patch, class: "inline-block", id: "book-#{book.id}-#{chapter_number}" do |form| %>
  <% has_chapter = book.chapters.any? {|chapter| chapter.chapter_number == chapter_number} %>
  <%= form.hidden_field :chapter_number, value: chapter_number %>
  <%= form.submit chapter_number, class: "cursor-pointer #{'bg-green-700 border-green-700 text-white' if has_chapter} text-center w-[40px] mb-2 mr-1 opacity-50 p-1 border border-gray-300 rounded inline-block" %>
<% end %>