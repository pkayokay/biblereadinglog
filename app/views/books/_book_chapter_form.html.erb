<%= form_with url: book_toggle_chapter_path(book), method: :patch, class: "inline-block", id: "book-#{book.id}-#{chapter_data["chapter_number"]}" do |form| %>
  <%= form.hidden_field :chapter_number, value: chapter_data["chapter_number"] %>
  <%= form.hidden_field :is_completed, value: chapter_data["completed_at"].present? %>
  <button type="submit" class="<%= 'bg-gray-800' if chapter_data["completed_at"] %> rounded bg-gray-200 inline-flex items-center justify-center text-center h-[80px] w-[80px]">
    <div class="<%= 'border-b-red-600' if chapter_data["completed_at"] %> text-lg bg-gray-50 rounded-full h-[50px] w-[50px] cursor-pointer flex items-center justify-center">
      <%= chapter_data["chapter_number"] %>
    </div>
  </button>
<% end %>