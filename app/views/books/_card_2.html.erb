<div class="hover:bg-neutral-50 hover:scale-[102%] border mb-3 rounded-lg duration-100 text-lg flex items-center pr-4  border-b border-neutral-200" id="<%= book_card_container_turbo_frame_id(book) %>">
  <%= link_to reading_log_book_path(book.reading_log, book), class: "pl-5 pr-2 w-full block py-3" do %>
    <div class="text-lg flex items-center justify-between w-full">
      <%= book.name %>
      <div class="opacity-50 text-sm"><%= book.completed_chapter_percentage %>%</div>
    </div>
  <% end %>
    <%= button_to pin_book_reading_log_book_path(book.reading_log, book), method: :patch, class: "#{book.pin_order.present? ? '' : ''} sm:mb-0 mb-3 text-sm group hover:bg-gray-50 items-center justify-center rounded-md p-2 flex", aria: {label:"Pin Book" } do %>
    <div class="flex-1 sr-only">
      <% if book.pin_order.present? %>
        <span class="group-hover:hidden">Pinned</span>
        <span class="hidden group-hover:inline-block">Unpin</span>
      <% else %>
        Pin
      <% end %>
    </div>
    <svg focusable="false" class="<%= book.pin_order.present? ? "group-hover:rotate-0  stroke-yellow-500 fill-yellow-500" : 'group-hover:stroke-yellow-500 group-hover:fill-yellow-500 opacity-30' %> duration-100 group-hover:opacity-100  group-hover:rotate-45 fill-neutral-700 stroke-neutral-700 cursor-pointer w-5 h-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-star"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
    <svg focusable="false" class="hidden <%= book.pin_order.present? ? "group-hover:rotate-0 rotate-45 stroke-neutral-600 fill-neutral-600" : 'group-hover:rotate-30 opacity-30' %> duration-100 group-hover:opacity-100 fill-neutral-700 stroke-neutral-700 cursor-pointer w-5 h-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-pin"><line x1="12" x2="12" y1="17" y2="22"/><path d="M5 17h14v-1.76a2 2 0 0 0-1.11-1.79l-1.78-.9A2 2 0 0 1 15 10.76V6h1a2 2 0 0 0 0-4H8a2 2 0 0 0 0 4h1v4.76a2 2 0 0 1-1.11 1.79l-1.78.9A2 2 0 0 0 5 15.24Z"/></svg>
  <% end %>
</div>